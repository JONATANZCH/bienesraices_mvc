div(class="bg-white shadow rounded-md")
    img(class="object-cover h-72 w-full" src=`/uploads/${propiedad.imagen}` alt=`imagen propiedad ${propiedad.titulo}`)
    div(class="p-5 space-y-5")
        h3(class="text-2xl font-bold")= propiedad.titulo 
        p(class="text-sm text-gray-600") Habitaciones: 
            span(class="text-gray-800 font-bold")= propiedad.habitaciones
        p(class="text-sm text-gray-600") WC: 
            span(class="text-gray-800 font-bold")= propiedad.wc
        p(class="text-sm text-gray-600") Pecio: 
            span(class="text-gray-800 font-bold")= propiedad.precio.nombre
        a(href=`/propiedad/${propiedad.id}` class="bg-amber-800 w-full text-center block font-medium text-white p-2 uppercase rounded-md") Ver Propiedad